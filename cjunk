<ion-item class="border-item" lines="none">
  <ion-label position="floating">
    {{
    label()
    }}
  </ion-label>
  <ion-searchbar [debounce]="1000" (ionInput)="filterItems($event)" show-clear-button="always"></ion-searchbar>
  <ion-list>
  @for (item of filteredItems(); track $index) {
  <ion-item (click)="onSelect(item)">
    <ion-label>
      {{
      item[itemTextField()]
      }}
    </ion-label>
  </ion-item>
  }
  </ion-list>
</ion-item>


